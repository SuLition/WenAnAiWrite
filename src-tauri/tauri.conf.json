{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "WenAnAssistant",
  "version": "0.2.5",
  "identifier": "com.wenanassistant.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:15173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "minWidth": 1080,
        "minHeight": 760,
        "title": "文案助手",
        "label": "main",
        "width": 960,
        "height": 680,
        "center": true,
        "decorations": false,
        "dragDropEnabled": false,
        "transparent": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis"
    ],
    "createUpdaterArtifacts": "v1Compatible",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "binaries/backend_server.exe"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IERBMjQ0MjRGOTc4RDAwRkYKUldUL0FJMlhUMElrMnMyNXl3ZlBjbWFtdVFsVXFtWVNLMnFWZ21iVCtUdGNrdEpndjJha1lJdDcK",
      "endpoints": [
        "https://github.com/SuLition/WenAnAiWrite/releases/latest/download/latest.json"
      ]
    }
  }
}
